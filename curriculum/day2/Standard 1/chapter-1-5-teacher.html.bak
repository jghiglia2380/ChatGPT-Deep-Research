        <div>
            <h4 class="font-medium text-gray-800 mb-1">Teaching Tip: Human Capital</h4>
            <p class="text-sm text-gray-600 mb-2">Students often struggle with the abstract concept of human capital. Need some concrete examples and visual aids?</p>
            <div class="flex justify-end">
                <button id="dismiss-bubble" class="text-gray-500 text-sm mr-3">Dismiss</button>
                <button id="show-tip" class="text-indigo-600 font-medium text-sm">Show Me</button>
            </div>
        </div>
    </div>

    <script>
        // Tab switching functionality
        function switchTab(tabId) {
            // Hide all tab contents
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.remove('active');
            });
            
            // Show the selected tab content
            document.getElementById(tabId).classList.add('active');
            
            // Update tab styling
            document.querySelectorAll('.tab').forEach(tab => {
                tab.classList.remove('active');
            });
            
            // Find the clicked tab and activate it
            const tabs = document.querySelectorAll('.tab');
            for (let i = 0; i < tabs.length; i++) {
                if (tabs[i].textContent === (tabId === 'content-guide' ? 'Content Guide' : 'Learning Lab')) {
                    tabs[i].classList.add('active');
                }
            }
            
            // Update the Instructor Support Panel with relevant questions
            updateSupportPanel(tabId);
        }
        
        // Update Instructor Support Panel based on current tab
        function updateSupportPanel(tabId) {
            // Update current section display
            document.getElementById('current-section').textContent = tabId === 'content-guide' ? 'Content Guide' : 'Learning Lab';
            
            // Show appropriate question set
            if (tabId === 'content-guide') {
                document.getElementById('content-guide-questions').classList.remove('hidden');
                document.getElementById('learning-lab-questions').classList.add('hidden');
            } else {
                document.getElementById('content-guide-questions').classList.add('hidden');
                document.getElementById('learning-lab-questions').classList.remove('hidden');
            }
        }
        
        // Instructor Support Panel functionality
        document.getElementById('show-support-panel').addEventListener('mouseenter', function() {
            document.getElementById('support-button-text').classList.remove('max-w-0', 'opacity-0');
            document.getElementById('support-button-text').classList.add('max-w-xs', 'opacity-100', 'ml-2');
        });
        
        document.getElementById('show-support-panel').addEventListener('mouseleave', function() {
            document.getElementById('support-button-text').classList.add('max-w-0', 'opacity-0');
            document.getElementById('support-button-text').classList.remove('max-w-xs', 'opacity-100', 'ml-2');
        });
        
        document.getElementById('show-support-panel').addEventListener('click', function() {
            document.getElementById('instructor-support-panel').style.width = '400px';
        });
        
        document.getElementById('close-support-panel').addEventListener('click', function() {
            document.getElementById('instructor-support-panel').style.width = '0';
        });
        
        // Function to preset a question from a category
        function presetQuestion(question) {
            document.getElementById('instructor-question').value = question;
            document.getElementById('instructor-question').focus();
        }
        
        // Get help button functionality
        document.getElementById('get-support-help').addEventListener('click', function() {
            const question = document.getElementById('instructor-question').value.trim();
            if (question) {
                // Display the question and a simulated response
                document.getElementById('question-display').textContent = question;
                
                // Generate response based on context and question
                let response = generateContextualResponse(question);
                document.getElementById('response-content').innerHTML = response;
                
                // Show the response container
                document.getElementById('response-container').classList.remove('hidden');
                
                // Add to history
                addToHistory(question, response);
                
                // Clear the input
                document.getElementById('instructor-question').value = '';
            }
        });
        
        // Generate contextual responses based on question and current section
        function generateContextualResponse(question) {
            const currentTab = document.querySelector('.tab.active').textContent;
            const lowerQuestion = question.toLowerCase();
            
            // Check for different question types and provide contextual responses
            if (lowerQuestion.includes('human capital')) {
                return `<p>Here are some effective ways to explain human capital:</p>
                <ul class="list-disc pl-5 my-2">
                    <li>Use a video game analogy: "Human capital is like upgrading a character. Each new skill makes you more valuable and able to take on bigger challenges."</li>
                    <li>Draw two career paths on the board - one showing job hopping without skill building, another showing progressive skill development leading to advancement.</li>
                    <li>Share relatable examples: "Learning Excel might seem small, but it adds value that employers will pay more for."</li>
                </ul>
                <p>Need examples tailored to your specific student interests?</p>`;
            } else if (lowerQuestion.includes('college') || lowerQuestion.includes('education')) {
                return `<p>Great question! When discussing whether college is necessary:</p>
                <ol class="list-decimal pl-5 my-2">
                    <li>Present college as one path among many (apprenticeships, trade schools, certifications)</li>
                    <li>Clarify that different careers have different educational requirements</li>
                    <li>Frame education as an investment with various options</li>
                    <li>Highlight successful individuals who took different educational paths</li>
                </ol>
                <p>The key message: education continues beyond high school for most careers, but it doesn't always mean a traditional four-year degree.</p>`;
            } else if (lowerQuestion.includes('obstacle') || lowerQuestion.includes('barrier')) {
                return `<p>For obstacle identification activities:</p>
                <ul class="list-disc pl-5 my-2">
                    <li>Provide categories: financial, educational, geographic, skill-based, and personal</li>
                    <li>Share examples from real professionals or past students (anonymized)</li>
                    <li>Suggest student interviews with people in their desired field</li>
                    <li>Offer guided worksheets with prompts for students who struggle</li>
                </ul>
                <p>Pro tip: Always follow obstacle identification with mitigation strategy development.</p>`;
            } else {
                // Default response if question type isn't specifically recognized
                return `<p>For teaching about jobs vs. careers effectively:</p>
                <ul class="list-disc pl-5 my-2">
                    <li>Connect concepts to students' existing experiences</li>
                    <li>Use visual aids and concrete examples</li>
                    <li>Create opportunities for personal connection to the material</li>
                    <li>Facilitate guided discussions to explore nuances</li>
                </ul>
                <p>Need more specific strategies for this topic?</p>`;
            }
        }
        
        // Add question and response to history
        function addToHistory(question, response) {
            const historyList = document.getElementById('history-list');
            const truncatedResponse = response.length > 100 ? response.substring(0, 100) + '...' : response;
            
            // Create a history item
            const historyItem = document.createElement('div');
            historyItem.className = 'bg-white p-3 rounded-lg border border-gray-200';
            historyItem.innerHTML = `
                <div class="text-sm text-gray-500 mb-1">Your question:</div>
                <div class="font-medium mb-2">${question}</div>
                <div class="text-sm text-gray-500 mb-1">Response:</div>
                <div class="text-gray-700 text-sm history-response">${truncatedResponse}</div>
                <button class="text-indigo-600 font-medium text-sm mt-1 show-full-response">Show more</button>
            `;
            
            // Add to history container
            historyList.prepend(historyItem);
            
            // Show history container if it was hidden
            document.getElementById('recent-history-container').classList.remove('hidden');
            
            // Add event listener to 'Show more' button
            historyItem.querySelector('.show-full-response').addEventListener('click', function() {
                const responseDisplay = document.getElementById('response-content');
                const questionDisplay = document.getElementById('question-display');
                
                questionDisplay.textContent = question;
                responseDisplay.innerHTML = response;
                
                document.getElementById('response-container').classList.remove('hidden');
            });
        }
        
        // New question button functionality
        document.getElementById('new-question-btn').addEventListener('click', function() {
            document.getElementById('instructor-question').value = '';
            document.getElementById('response-container').classList.add('hidden');
            document.getElementById('instructor-question').focus();
        });
        
        // Show/hide history
        document.getElementById('show-history-btn').addEventListener('click', function() {
            const historyContainer = document.getElementById('recent-history-container');
            historyContainer.classList.toggle('hidden');
        });
        
        // Download resources button
        document.getElementById('download-resources-btn').addEventListener('click', function() {
            alert('Teaching resources for Chapter 1.1: Jobs vs. Careers would be downloaded here. This would include additional examples, worksheets, and presentation materials.');
        });
        
        // Suggestion bubble functionality
        window.addEventListener('load', function() {
            // Show suggestion bubble after a delay
            setTimeout(function() {
                document.getElementById('suggestion-bubble').classList.remove('hidden');
            }, 45000); // Show after 45 seconds
        });
        
        document.getElementById('dismiss-bubble').addEventListener('click', function() {
            document.getElementById('suggestion-bubble').classList.add('hidden');
        });
        
        document.getElementById('show-tip').addEventListener('click', function() {
            // Hide the bubble
            document.getElementById('suggestion-bubble').classList.add('hidden');
            
            // Open the support panel
            document.getElementById('instructor-support-panel').style.width = '400px';
            
            // Pre-fill and submit a question about human capital
            document.getElementById('instructor-question').value = 'How can I explain human capital to students using concrete examples?';
            document.getElementById('get-support-help').click();
        });
        
        // Print functionality
        document.getElementById('printBtn').addEventListener('click', function() {
            window.print();
        });
        
        // Download functionality
        document.getElementById('downloadBtn').addEventListener('click', function() {
            alert('Materials would be downloaded here. In a production environment, this would provide lesson resources as a ZIP file.');
        });
    </script>
</body>
</html>